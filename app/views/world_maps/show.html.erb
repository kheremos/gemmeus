<p id="notice"><%= notice %></p>

<p>
  <b>Width:</b>
  <%= @world_map.width %>
</p>

<p>
  <b>Height:</b>
  <%= @world_map.height %>
</p>

<p>
  <b>Image:</b>
  <%= puts "@world_map.image" %>
</p>

<% local_map = @world_map.image_array(10, 50, 50) %>

<table border="0" cellpadding="0" cellspacing="0" id="map">
  <tr>
    <th></th>
    <% for x in 50-10..50+10 %>
        <th><%= x %></th>
    <% end %>
  </tr>
  <% for y in 50-10..50+10 %>
      <tr>
        <td id="map" >
          <%= "#{y}" %>
        </td>
        <% for x in (50-10)..50+10 %>
            <td>
              <% this_string = "#{x},#{y}" %>
              <% image = "#{WorldMap::IMAGE_MAP[local_map[this_string]]}" %>
              <%= image_tag("#{image}", :size => "25x25", :id => "map", :border => 0) %><!--
            --></td>
        <% end %>
      </tr>

  <% end %>
</table>
